<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/search_toolbar"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    android:background="@color/white"
    android:minHeight="@dimen/dimen_0dp"
    app:menu="@menu/main_item_menu"
    app:contentInsetStartWithNavigation="@dimen/dimen_0dp"
    app:titleTextAppearance="@style/Widget.AppCompat.Toolbar">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <SearchView
            android:id="@+id/edtInputSearch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_10dp"
            android:layout_marginEnd="@dimen/dimen_16dp"
            android:layout_marginBottom="@dimen/dimen_10dp"
            android:background="@drawable/bg_rounded_white"
            android:iconifiedByDefault="false"
            android:queryHint="@string/hint_search_user_github"
            android:searchIcon="@drawable/ic_baseline_search_24"
            android:theme="@style/Widget.AppCompat.SearchView"
            tools:targetApi="lollipop" />

    </LinearLayout>

</androidx.appcompat.widget.Toolbar>
